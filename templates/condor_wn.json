{
  "id": "condorwn",
  "cpus": {{ams_docker_cpu_x_wn}},
  "mem": {{ams_docker_ram_x_wn}},
  "instances": {{number_of_wn_instances}},
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{htcondor_config_condor_image}}",
      "forcePullImage": true,
      "privileged": true,
      "network": "BRIDGE"
    },
    "volumes": [
      {
          "containerPath": "/cvmfs",
          "hostPath": "/cvmfs",
          "mode": "RW"
      },
      {
        "containerPath": "/home/uwdir",
        "hostPath": "/tmp/uwdir",
        "mode": "RW"
      }
    ]
  },
  "healthChecks": [
    {
      "command": {
        "value": "dodas_check_condor_processes condor_startd && dodas_check_cvmfs_folders && dodas_check_condor_master_ip"
      },
      "protocol": "COMMAND",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "delaySeconds": 15
    }
  ],
  "env": {
    "CONDOR_HOST": "ZOOKEEPER",
    "SLOT_TYPE_1": "cpus={{ams_cpu_x_wn}}, mem={{ams_ram_x_wn}}",
    "ZOOKEEPER_HOST_LIST": "{{ zookeeper_peers }}"
  },
  "args": [
    "wn"
  ],
  "constraints": [
    ["hostname", "UNLIKE", "{{htcondor_config_schedd_ip}}"]
  ]
}

